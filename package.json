{
	"name": "create-graphql-server",
	"version": "0.1.0",
	"description": "CLI for creating GraphQL Server with Node.js",
	"main": "dist/main.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/peterleiva/create-graphql-server.git"
	},
	"keywords": [
		"boilerplate",
		"graphql",
		"apollo-server",
		"express.js"
	],
	"author": "Peter <npmjs@peter.dev.br>",
	"license": "MIT",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"start": "node .",
		"build": "npm run webpack -- --env mode=production",
		"build:analyze": "npm run build -- --env presets.analyzer",
		"dev": "npm run webpack -- --watch --env mode=development --env lint --env clean",
		"webpack": "webpack",
		"lint": "eslint .",
		"typecheck": "concurrently --raw \"npm:typecheck:app\" \"npm:typecheck:tests\"",
		"typecheck:app": "tsc -p src/tsconfig.app.json --noEmit",
		"typecheck:tests": "concurrently --raw \"npm:typecheck:tests:e2e\" \"npm:typecheck:tests:unit-integration\"",
		"typecheck:tests:e2e": "tsc -p e2e/tsconfig.json --noEmit",
		"typecheck:tests:unit-integration": "tsc --noEmit src/**/__tests__/**/*",
		"format": "npm run prettier -- --write",
		"format:check": "npm run prettier -- --check",
		"prettier": "prettier --ignore-path .gitignore \".\"",
		"test": "jest",
		"test:watch": "npm t -- --watch",
		"test:app": "jest --config src/test/jest.config.js",
		"test:e2e": "jest --config e2e/jest.config.js",
		"prepare": "husky install"
	},
	"bugs": {
		"url": "https://github.com/peterleiva/graphql-server-boilerplate/issues"
	},
	"homepage": "https://github.com/peterleiva/graphql-server-boilerplate#readme",
	"devDependencies": {
		"@babel/core": "^7.14.3",
		"@babel/preset-env": "^7.14.4",
		"@tsconfig/node16": "^1.0.1",
		"@types/express": "^4.17.12",
		"@types/http-errors": "^1.8.0",
		"@types/jest": "^26.0.23",
		"@types/lodash": "^4.14.170",
		"@types/node": "^15.6.1",
		"@types/pino-http": "^5.4.1",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-source-map-support": "^2.1.3",
		"concurrently": "^6.2.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-webpack": "^0.13.1",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-json": "^3.0.0",
		"eslint-plugin-markdown": "^2.2.0",
		"fork-ts-checker-webpack-plugin": "^6.2.10",
		"husky": "^6.0.0",
		"jest": "^27.0.3",
		"jest-extended": "^0.11.5",
		"jest-watch-select-projects": "^2.0.0",
		"jest-watch-typeahead": "^0.6.4",
		"lint-staged": "^11.0.0",
		"nodemon-webpack-plugin": "^4.5.2",
		"prettier": "^2.3.0",
		"ts-jest": "^27.0.1",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"webpack-config-organizer": "^0.2.2",
		"webpack-node-externals": "^3.0.0"
	},
	"dependencies": {
		"address": "^1.1.2",
		"chalk": "^4.1.1",
		"core-js": "^3.14.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"http-errors": "^1.7.2",
		"lodash": "^4.17.21",
		"node.env-inspector": "^0.3.0",
		"pino": "^6.11.3",
		"pino-http": "^5.5.0",
		"source-map-support": "^0.5.19"
	},
	"lint-staged": {
		"*": [
			"eslint --cache",
			"prettier --write --ignore-unknown"
		]
	},
	"webpack-config-organizer": {
		"base": "./configs/webpack"
	}
}
